{
  "name": "sumo-balls",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "vscode",
  "forwardPorts": [7777],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake"
      ],
      "settings": {
        "cmake.configureOnOpen": false,
        "cmake.generator": "Unix Makefiles"
      }
    }
  },
  "postCreateCommand": "cmake -S . -B build && cmake --build build",
  "features": {}
}
